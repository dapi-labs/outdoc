{
  "compilerOptions": {
    "strict": true,
    "target": "ES5",
    "sourceMap": false,
    "outDir": "lib",
    "declaration": true,
    "moduleResolution": "node",
    "removeComments": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "**/*.test.*", "lib/"]
}
